<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:layout_margin="@dimen/unit_quarter">

    <ImageView
        android:id="@+id/imageViewComic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/unit_half"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/marvel_placeholder" />

    <TextView
        android:id="@+id/textViewComicTitle"
        style="@style/Marvel.Text.Title.Comic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewComic"
        tools:text="W.E.B. of Spider-Man #4" />

    <TextView
        android:id="@+id/textViewComicIssueNumber"
        style="@style/Marvel.Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/comic_issue_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComicTitle" />

    <TextView
        android:id="@+id/textViewComicPrice"
        style="@style/Marvel.Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/comic_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComicIssueNumber" />

    <TextView
        android:id="@+id/textViewComicFormat"
        style="@style/Marvel.Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/comic_format"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComicPrice" />

    <TextView
        android:id="@+id/textViewComicDescription"
        style="@style/Marvel.Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComicFormat"
        tools:text="Spiderman is so cool"/>

</androidx.constraintlayout.widget.ConstraintLayout>